+# Anna Vung
+# vungc
+# https://docs.google.com/document/d/17YWZAJPTs6zMQKpO_T_lZJoargcSzVc6Wc_cnN4SA80/edit?usp=sharing
+
+import turtle
+wn = turtle.Screen()
+turtle.speed(0)
+
+def stars(t, size): # d is degree
+    t.color(255, 255, 255)
+    t.penup()
+    t.pensize(1)
+    t.shape("circle")
+    t.shapesize(.05)
+    t.goto(50, 50)
+    for i in range(100):
+        t.stamp()
+        size = size + 1
+        t.fd(size + 1)
+        t.right(20)
+def lawn(t):       # to split the area between the sky and the snow
+    t.color(20, 50, 0)
+    t.begin_fill()
+    t.penup()
+    t.goto(-320, -50)   # going to edge of screen
+    t.pendown()
+    for i in range(2): # drawing half a rectangle to fill
+        t.forward(640)  # drawing line towards other side of edge for snow
+        t.right(90)
+        t.forward(300)
+        t.right(90)
+    t.end_fill()
+def house(t, go):
+    t.color(150, 100, 0)
+    t.pensize(5)
+    t.begin_fill()
+    for i in range(3):  # drawing roof
+        t.forward(go)
+        t.left(120)
+    t.right(90)
+    for i in range(3):  # drawing house
+        t.forward(go)
+        t.left(90)  # end facing west
+    t.end_fill()
+    t.penup()   # repeat again to outline house
+    t.goto(0,0)
+    t.right(180)
+    t.color("black")
+    t.pensize(5)
+    t.pendown()
+    for i in range(3):
+         t.forward(go)
+         t.left(120)
+    t.right(90)
+    for i in range(3):
+        t.forward(go)
+        t.left(90)  # end facing west
+    t.penup()
+    t.goto(0,0)
+    t.goto(go-20, -go)
+    t.pendown()
+    t.color("black")
+    t.pensize(2)
+    for i in range(2):  # drawing door
+        t.forward(20)
+        t.right(90)
+        t.forward(50)
+        t.right(90)     # facing West
+    t.penup()  # drawing window
+    t.goto(30, 30)
+    t.right(180)
+    t.pensize(2)
+    t.pendown()
+    for i in range(4):
+        t.forward(20)
+        t.right(90)        # East
+    t.forward(10)   # drawing glass on window
+    t.right(90)
+    t.forward(20)
+    t.right(90)
+    t.forward(10)
+    t.right(90)
+    t.forward(10)
+    t.right(90)
+    t.fd(20)
+    t.penup()
+    t.fd(100)
+def moon(t):
+    t.color(230, 230, 255)
+    t.shape("circle")
+    t.penup()
+    t.goto(-250, 200)
+    t.shapesize(10)
+    t.stamp()
+
+def main():
+    turtle.colormode(255)
+    wn.bgcolor(0, 0, 25)
+    av = turtle.Turtle()    # draw house
+    av2 = turtle.Turtle()   # to draw snow
+    av3 = turtle.Turtle()   # stars
+    av4 = turtle.Turtle()   # moon
+    stars(av3, 1)
+    lawn(av2)
+    house(av, 100)
+    moon(av4)
+
+main()
+
+wn.exitonclick()
